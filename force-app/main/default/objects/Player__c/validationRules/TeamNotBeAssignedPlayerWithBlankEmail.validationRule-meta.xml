<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TeamNotBeAssignedPlayerWithBlankEmail</fullName>
    <active>true</active>
    <description>Team cannot be assigned to the player with blank Email</description>
    <errorConditionFormula>AND ( ISBLANK( Email__c ),
					IsActive__c = true
				)</errorConditionFormula>
    <errorDisplayField>Team__c</errorDisplayField>
    <errorMessage>Please enter the player&apos;s email</errorMessage>
</ValidationRule>
